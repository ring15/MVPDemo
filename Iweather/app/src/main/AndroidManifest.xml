<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.founq.iweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".base.MyApplication"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".weather.view.MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".chooseprovince.view.ChooseProvinceActivity" />
        <activity android:name=".choosecity.view.ChooseCityActivity"/>
        <activity android:name=".choosecountry.view.ChooseCountryActivity"/>

    </application>

</manifest>